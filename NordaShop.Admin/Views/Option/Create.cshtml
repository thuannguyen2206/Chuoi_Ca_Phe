@using NordaShop.Admin.Models.Option
@using DataAccess.Enums
@model OptionViewModel

@{
    ViewData["Title"] = "Create";
    ViewData["PageName"] = "forms-page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="title-block">
    <h1 class="title"> Tạo tùy chọn sản phẩm mới </h1>
</div>
<div class="col-md-12">
    <div class="card card-block sameheight-item">
        <form asp-action="Create" asp-controller="Option" method="post" enctype="multipart/form-data">
            <div class="form-group has-success">
                <label class="control-label">Tên</label>
                <input type="text" asp-for="NameOption" class="form-control underlined">
                <span asp-validation-for="NameOption" class="has-success text-danger"></span>
            </div>
            <div class="form-group has-success">
                <label class="control-label">Seo alias</label>
                <input type="text" asp-for="SeoAlias" class="form-control underlined">
                <span asp-validation-for="SeoAlias" class="has-success text-danger"></span>
            </div>
            <div class="form-group has-success">
                <div class="row">
                    <div class="col-md-6 form-group has-success">
                        <label class="control-label">Option type</label>
                        <div>
                            <label>
                                <input class="radio" asp-for="GroupName" value="Size" checked id="group-name" name="GroupName" type="radio">
                                <span>Size</span>
                            </label>
                            <label>
                                <input class="radio" asp-for="GroupName" value="Color" id="group-name" name="GroupName" type="radio">
                                <span>Color</span>
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6 form-group has-success">
                        <label>
                            <input class="checkbox" asp-for="IsActive" type="checkbox">
                            <span>Kích hoạt</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group" style="margin-top:40px;">
                <button type="submit" class="btn btn-primary">Tạo mới</button>
            </div>
        </form>
    </div>
</div>

