@using NordaShop.Admin.Models.Brand
@model BrandViewModel

@{
    ViewData["Title"] = "Edit";
    ViewData["PageName"] = "forms-page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="title-block">
    <h1 class="title"> Cập nhật thương hiệu </h1>
</div>
<div class="col-md-12">
    <div class="card card-block sameheight-item">
        <form asp-action="Edit" asp-controller="Brand" method="post" enctype="multipart/form-data">
            <div class="form-group has-success">
                <label class="control-label">Tên thương hiệu</label>
                <input type="text" asp-for="BrandName" class="form-control underlined">
                <span asp-validation-for="BrandName" class="has-success text-danger"></span>
            </div>
            <div class="form-group has-success">
                <label class="control-label">Seo alias</label>
                <input type="text" asp-for="SeoAlias" class="form-control underlined">
                <span asp-validation-for="SeoAlias" class="has-success text-danger"></span>
            </div>
            <div class="col-md-6 form-group has-success">
                <label>
                    <input class="checkbox" asp-for="IsActive" type="checkbox">
                    <span>Kích hoạt</span>
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">Logo thương hiệu</label>
                <input type="file" accept=".jpg, .png, .jpeg, .gif" asp-for="BrandFile" class="form-control underlined">
            </div>
            <div class="form-group" style="margin-top:40px;">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>
