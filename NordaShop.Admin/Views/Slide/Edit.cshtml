@using NordaShop.Admin.Models.Slide
@model CESlideViewModel

@{
    ViewData["Title"] = "Edit";
    ViewData["PageName"] = "forms-page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="title-block">
    <h1 class="title"> Cập nhật slide </h1>
</div>
<div class="col-md-12">
    <div class="card card-block sameheight-item">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="form-group has-success">
                <div class="row">
                    <div class="col-sm-6 form-group has-success">
                        <label class="control-label">Tên slide</label>
                        <input type="text" asp-for="Name" class="form-control underlined">
                        <span asp-validation-for="IsActive" class="has-success text-danger"></span>
                    </div>
                    <div class="col-sm-6 form-group has-success">
                        <label class="control-label">Thứ tự hiển thị</label>
                        <input type="number" asp-for="SortOrder" class="form-control underlined">
                        <span asp-validation-for="SortOrder" class="has-success text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group has-success">
                <label class="control-label">Tiêu đề</label>
                <input type="text" asp-for="Title" class="form-control underlined">
                <span asp-validation-for="Title" class="has-success text-danger"></span>
            </div>
            <div class="col-md-6 form-group has-success">
                <label>
                    <input class="checkbox" asp-for="IsActive" type="checkbox">
                    <span>Kích hoạt</span>
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">Hình ảnh slide</label>
                <input type="file" accept=".jpg, .png, .jpeg, .gif" asp-for="ImageFile" class="form-control underlined">
            </div>
            <div class="form-group" style="margin-top:40px;">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>
