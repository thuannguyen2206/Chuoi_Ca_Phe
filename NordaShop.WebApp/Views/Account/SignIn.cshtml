@using NordaShop.WebApp.Models.Account
@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    ViewData["IsHome"] = false;
}

@await Component.InvokeAsync("Breadcrumb", new { pagename = "Đăng nhập" })

<div class="login-register-area pt-115 pb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ms-auto me-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-bs-toggle="tab" href="#">
                            <h4> Đăng nhập </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <div class="login-form-container">
                                <div class="row login-register-tab-list nav">
                                    <div class="col-6" style="text-align:center;"><a asp-action="FacebookSignIn" class="btn btn-info">Đăng nhập với Facebook</a></div>
                                    <div class="col-6" style="text-align:center;"><a asp-action="GoogleSignIn" class="btn btn-danger">Đăng nhập với Google</a></div>
                                </div>
                                <div class="login-register-form">
                                    <form asp-action="SignIn" asp-controller="Account" method="post" enctype="multipart/form-data">
                                        <div>
                                            <span asp-validation-for="Username" style="float:right;" class="text-danger"></span>
                                            <input type="text" asp-for="Username" placeholder="Username">
                                        </div>
                                        <div>
                                            <span asp-validation-for="Password" style="float:right;" class="text-danger"></span>
                                            <input type="password" asp-for="Password" placeholder="Password">
                                        </div>
                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <input type="checkbox" asp-for="RememberMe">
                                                <label>Nhớ tài khoản?</label>
                                                <a asp-action="ForgotPassword" asp-controller="Account">Quên mật khẩu?</a>
                                            </div>
                                            <button type="submit">Đăng nhập</button>
                                        </div>
                                    </form>
                                </div>
                                <div style="font-size:17px;margin-top:50px;" class="login-register-tab-list nav">
                                    <div>
                                        Bạn chưa có tài khoản?
                                        <a asp-action="SignUp" asp-controller="Account"><strong> Đăng kí ngay.</strong></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

