@using NordaShop.WebApp.Models.Account
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "ResetPassword";
    ViewData["IsHome"] = false;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("Breadcrumb", new { pagename = "Đổi mật khẩu" })

<div class="login-register-area pt-115 pb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ms-auto me-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-bs-toggle="tab" href="#">
                            <h4> Đặt lại mật khẩu </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form asp-action="ResetPassword" asp-controller="Account" method="post" enctype="multipart/form-data">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div>
                                            <span asp-validation-for="Password" style="float:right;" class="text-danger"></span>
                                            <input type="password" asp-for="Password" placeholder="Enter new password">
                                        </div>
                                        <div>
                                            <span asp-validation-for="Password" style="float:right;" class="text-danger"></span>
                                            <input type="password" asp-for="ConfirmPassword" placeholder="Confirm password">
                                        </div>
                                        <div>
                                            <input type="text" asp-for="Token" hidden/>
                                        </div>
                                        <div class="button-box" style="margin-top:20px;">
                                            <button type="submit">Reset</button>
                                        </div>
                                    </form>
                                </div>
                                <div style="font-size:17px;margin-top:50px;" class="login-register-tab-list nav">
                                    Bạn chưa có tài khoản?
                                    <a asp-action="SignUp" asp-controller="Account"><strong> Đăng kí ngay.</strong></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

